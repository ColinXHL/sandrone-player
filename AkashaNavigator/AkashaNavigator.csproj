<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>..\assets\icons\akasha-navigator.ico</ApplicationIcon>
    <Version>0.3.0-alpha.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2420.47" />
    <PackageReference Include="Microsoft.ClearScript.V8" Version="7.4.5" />
    <PackageReference Include="Microsoft.ClearScript.V8.Native.win-x64" Version="7.4.5" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Scripts\InjectedStyles.css" />
    <EmbeddedResource Include="Scripts\InjectedScripts.js" />
  </ItemGroup>

  <!-- 图片资源 -->
  <ItemGroup>
    <Resource Include="..\assets\akasha-navigator-logo.png" Link="Assets\akasha-navigator-logo.png" />
  </ItemGroup>

  <!-- 复制内置 Profile 模板到输出目录 -->
  <ItemGroup>
    <None Include="..\profiles\**\*" CopyToOutputDirectory="PreserveNewest" LinkBase="Profiles" />
  </ItemGroup>

  <!-- 复制内置插件到输出目录 -->
  <ItemGroup>
    <None Include="..\plugins\**\*" CopyToOutputDirectory="PreserveNewest" LinkBase="Plugins" />
  </ItemGroup>

</Project>
