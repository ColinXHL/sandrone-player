<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.Dialogs.ProfileSelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        xmlns:vm="clr-namespace:AkashaNavigator.ViewModels.Dialogs"
        Title="选择 Profile"
        Width="400"
        Height="450"
        WindowStartupLocation="CenterOwner"
        Foreground="White"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <!-- 主容器 -->
    <Border x:Name="MainContainer" Background="#1E1E1E" BorderBrush="#333" BorderThickness="1" CornerRadius="8"
            RenderTransformOrigin="0.5,0.5" Opacity="0">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="0.96" ScaleY="0.96"/>
        </Border.RenderTransform>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="选择 Profile" FontSize="13" FontWeight="SemiBold"
                               Foreground="#EEE" VerticalAlignment="Center" Margin="16,0"/>
                    <Button Style="{StaticResource TitleBarCloseButtonStyle}"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Command="{Binding CloseCommand}"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <Grid Grid.Row="1" Margin="20,16,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 提示文本 -->
                <TextBlock Grid.Row="0" x:Name="HintText" 
                           Text="选择要添加插件的 Profile："
                           Foreground="#AAA" FontSize="12" Margin="0,0,0,12"/>

                <!-- Profile 列表 -->
                <ScrollViewer Grid.Row="1" Style="{StaticResource DarkScrollViewer}"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Profiles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource ProfileCheckBoxStyle}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          IsEnabled="{Binding CanSelect}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="（已添加）" Foreground="#666" FontSize="11"
                                                   Margin="8,0,0,0" VerticalAlignment="Center"
                                                   Visibility="{Binding AlreadyAddedVisibility}"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- 底部按钮 -->
            <Border Grid.Row="2" Background="#252525" CornerRadius="0,0,8,8" Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding SelectionCountText}" Foreground="#888" FontSize="12"
                               VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CancelCommand}" Margin="0,0,8,0"/>
                    <Button Grid.Column="2" Content="确定添加"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ConfirmCommand}" IsEnabled="{Binding CanConfirm}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
