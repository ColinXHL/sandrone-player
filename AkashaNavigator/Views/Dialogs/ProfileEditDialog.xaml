<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.Dialogs.ProfileEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        Title="编辑 Profile"
        Width="400"
        Height="280"
        WindowStartupLocation="CenterOwner"
        Foreground="White"
        ResizeMode="NoResize">

    <Border x:Name="MainContainer" Background="#1E1E1E" BorderBrush="#333" BorderThickness="1" CornerRadius="8"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,16" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="编辑 Profile" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                <Button Style="{StaticResource DialogCloseButtonStyle}"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Click="BtnClose_Click"/>
            </Grid>

            <!-- 名称输入 -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <TextBlock Text="名称" Foreground="#888" FontSize="12" Margin="0,0,0,6"/>
                <Grid>
                    <TextBox x:Name="TxtName" Style="{StaticResource DarkTextBoxStyle}"
                             Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock x:Name="NamePlaceholder" Text="输入 Profile 名称..."
                               Foreground="#666" FontSize="13"
                               IsHitTestVisible="False" Margin="12,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>
                <TextBlock x:Name="TxtError" Foreground="#F87171" FontSize="11"
                           Margin="0,4,0,0" Visibility="{Binding ShowError, Converter={StaticResource BoolToVisibilityConverter}}"
                           Text="{Binding ErrorMessage}"/>
            </StackPanel>

            <!-- 图标选择 -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock Text="图标" Foreground="#888" FontSize="12" Margin="0,0,0,6"/>
                <WrapPanel x:Name="IconPanel">
                    <!-- 图标按钮将在代码中动态生成 -->
                </WrapPanel>
            </StackPanel>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="取消" Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding CancelCommand}" Margin="0,0,8,0"/>
                <Button x:Name="BtnSave" Content="保存" Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
