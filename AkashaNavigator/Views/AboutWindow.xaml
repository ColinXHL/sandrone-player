<helpers:AnimatedWindow x:Class="AkashaNavigator.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:AkashaNavigator.Helpers"
        Title="关于"
        Width="360"
        Height="300"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize">

    <helpers:AnimatedWindow.Resources>
        <!-- 链接按钮样式 -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3399FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 关闭按钮样式 -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,8,0,0">
                            <TextBlock Text="✕" FontSize="14" Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C42B1C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </helpers:AnimatedWindow.Resources>

    <Border x:Name="MainContainer" Background="#1E1E1E" CornerRadius="8" Margin="16" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>  <!-- 标题栏 -->
                <RowDefinition Height="*"/>   <!-- 内容区 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="关于" FontSize="14" FontWeight="SemiBold"
                               Foreground="#EEE" VerticalAlignment="Center" Margin="16,0"/>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="24,16">
                <!-- 应用图标 -->
                <Image Source="/Assets/akasha-navigator-logo.png" Width="64" Height="64" 
                       RenderOptions.BitmapScalingMode="HighQuality"
                       HorizontalAlignment="Center" Margin="0,0,0,12"/>
                
                <!-- 应用名称 -->
                <TextBlock Text="AkashaNavigator" FontSize="20" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                
                <!-- 版本 -->
                <TextBlock Text="{Binding VersionText}" FontSize="13" Foreground="#888" 
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                
                <!-- 描述 -->
                <TextBlock Text="悬浮网页播放器 - 游戏攻略视频助手" FontSize="12" 
                           Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                
                <!-- 作者 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="作者：" FontSize="12" Foreground="#888"/>
                    <TextBlock Text="羊汪汪" FontSize="12" Foreground="#AAA"/>
                </StackPanel>
                
                <!-- GitHub 链接 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <TextBlock Text="GitHub：" FontSize="12" Foreground="#888" VerticalAlignment="Center"/>
                    <Button Content="ColinXHL/akasha-navigator" 
                            Style="{StaticResource LinkButtonStyle}"
                            Click="BtnGitHub_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
