<helpers:AnimatedWindow x:Class="FloatWebPlayer.Views.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:FloatWebPlayer.Helpers"
        Title="确认"
        Width="360"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Foreground="White"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">

    <helpers:AnimatedWindow.Resources>
        <!-- 关闭按钮样式 -->
        <Style x:Key="DialogCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <TextBlock Text="✕" FontSize="12" Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主按钮样式（确定） -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1084D8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006CC1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次要按钮样式（取消） -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </helpers:AnimatedWindow.Resources>

    <!-- 主容器 - 用于动画 -->
    <Border x:Name="MainContainer" Background="#2D2D2D" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题栏 -->
                <RowDefinition Height="*"/>     <!-- 内容区 -->
                <RowDefinition Height="Auto"/>  <!-- 按钮区 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>  <!-- 图标 -->
                        <ColumnDefinition Width="*"/>     <!-- 标题 -->
                        <ColumnDefinition Width="Auto"/>  <!-- 关闭按钮 -->
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <TextBlock x:Name="IconText" Grid.Column="0"
                               Text="?" FontSize="16"
                               Foreground="#0078D4"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <!-- 标题 -->
                    <TextBlock x:Name="TitleText" Grid.Column="1"
                               Text="确认"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="2"
                            Style="{StaticResource DialogCloseButtonStyle}"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- 内容区 -->
            <Border Grid.Row="1" Padding="20,16">
                <TextBlock x:Name="MessageText"
                           FontSize="13"
                           Foreground="#DDD"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </Border>

            <!-- 按钮区 -->
            <Border Grid.Row="2" Background="#252525" CornerRadius="0,0,8,8" Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- 确定按钮 -->
                    <Button x:Name="BtnConfirm"
                            Content="确定"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="BtnConfirm_Click"
                            Margin="0,0,8,0"/>
                    
                    <!-- 取消按钮 -->
                    <Button x:Name="BtnCancel"
                            Content="取消"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</helpers:AnimatedWindow>
