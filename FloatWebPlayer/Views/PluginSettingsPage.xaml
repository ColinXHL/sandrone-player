    <UserControl.Resources>
        <!-- åˆ†ç»„æ ‡é¢˜æ ·å¼ -->
        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- æ·±è‰²ä¸»é¢˜ ToggleButton å¼€å…³æ ·å¼ -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="track" Background="#555" CornerRadius="11" />
                            <Border x:Name="thumb" Width="18" Height="18" CornerRadius="9" 
                                    Background="White" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="thumb" Property="Margin" Value="24,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- æŒ‰é’®æ ·å¼ -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- å±é™©æŒ‰é’®æ ·å¼ï¼ˆçº¢è‰²è­¦å‘Šè‰²è°ƒï¼‰ -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#5C2020"/>
            <Setter Property="Foreground" Value="#F87171"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F1D1D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991B1B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3A1A1A"/>
                    <Setter Property="Foreground" Value="#666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- æƒé™æ ‡ç­¾æ ·å¼ -->
        <Style x:Key="PermissionTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <!-- æ’ä»¶å¡ç‰‡æ ·å¼ -->
        <Style x:Key="PluginCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- å·²å®‰è£…æ’ä»¶ -->
        <TextBlock Text="å·²å®‰è£…æ’ä»¶" Style="{StaticResource GroupHeaderStyle}" Margin="0,0,0,8"/>
        
        <!-- æ— æ’ä»¶æç¤º -->
        <TextBlock x:Name="NoPluginsText" Text="å½“å‰ Profile æ²¡æœ‰å®‰è£…æ’ä»¶" 
                   Foreground="#666" FontSize="12" Margin="0,0,0,8"/>
        
        <!-- æ’ä»¶åˆ—è¡¨ -->
        <ItemsControl x:Name="PluginList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource PluginCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- æ’ä»¶åç§°å’Œç‰ˆæœ¬ -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Version, StringFormat=' v{0}'}" Foreground="#888" FontSize="12" 
                                           VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </StackPanel>
                            
                            <!-- å¯ç”¨å¼€å…³å’Œå–æ¶ˆè®¢é˜…æŒ‰é’® -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="å–æ¶ˆè®¢é˜…" Style="{StaticResource DangerButtonStyle}"
                                        Click="BtnUnsubscribe_Click" Tag="{Binding Id}"
                                        Margin="0,0,12,0" Padding="8,4"/>
                                <ToggleButton Style="{StaticResource ToggleSwitchStyle}"
                                              IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                              Checked="PluginToggle_Changed" Unchecked="PluginToggle_Changed"
                                              Tag="{Binding Id}"/>
                            </StackPanel>
                            
                            <!-- æè¿° -->
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Description}" 
                                       Foreground="#AAA" FontSize="12" Margin="0,4,0,0"
                                       TextWrapping="Wrap" Visibility="{Binding HasDescription}"/>
                            
                            <!-- æƒé™æ ‡ç­¾ -->
                            <ItemsControl Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding Permissions}" 
                                          Margin="0,8,0,0" Visibility="{Binding HasPermissions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PermissionTagStyle}">
                                            <TextBlock Text="{Binding}" Foreground="#AAA" FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- æ“ä½œæŒ‰é’® -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,0"
                                        Visibility="{Binding HasOverlayPermission}">
                                <Button Content="ðŸ“ è°ƒæ•´è¦†ç›–å±‚ä½ç½®" Style="{StaticResource ActionButtonStyle}"
                                        Click="BtnEditOverlay_Click" Tag="{Binding Id}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
